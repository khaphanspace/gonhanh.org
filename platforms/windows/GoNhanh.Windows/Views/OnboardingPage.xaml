<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="GoNhanh.Views.OnboardingPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Padding="48">
        <StackPanel Spacing="32" HorizontalAlignment="Center" VerticalAlignment="Center" MaxWidth="600">

            <!-- Step indicators -->
            <StackPanel x:Name="StepIndicators" Orientation="Horizontal" HorizontalAlignment="Center" Spacing="8">
                <Ellipse x:Name="Step1Indicator" Width="12" Height="12" Fill="Blue"/>
                <Ellipse x:Name="Step2Indicator" Width="12" Height="12" Fill="Gray"/>
                <Ellipse x:Name="Step3Indicator" Width="12" Height="12" Fill="Gray"/>
            </StackPanel>

            <!-- Step 1: Welcome -->
            <StackPanel x:Name="Step1Panel" Spacing="16" Visibility="Visible">
                <Image Source="ms-appx:///Assets/Logo.png" Width="128" Height="128" HorizontalAlignment="Center"/>
                <TextBlock Text="Chao mung den voi Go Nhanh" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center"/>
                <TextBlock TextWrapping="Wrap" TextAlignment="Center">
                    Bo go tieng Viet hieu suat cao cho Windows. Chi can vai buoc thiet lap don gian.
                </TextBlock>
            </StackPanel>

            <!-- Step 2: Input Method Selection -->
            <StackPanel x:Name="Step2Panel" Spacing="16" Visibility="Collapsed">
                <TextBlock Text="Chon kieu go" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center"/>
                <RadioButtons x:Name="InputMethodRadio">
                    <RadioButton Content="Telex - Pho bien nhat" IsChecked="True" Tag="0"/>
                    <RadioButton Content="VNI - Dung phim so" Tag="1"/>
                </RadioButtons>
            </StackPanel>

            <!-- Step 3: Complete -->
            <StackPanel x:Name="Step3Panel" Spacing="16" Visibility="Collapsed">
                <TextBlock Text="Hoan tat!" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center"/>
                <TextBlock TextWrapping="Wrap" TextAlignment="Center">
                    Go Nhanh da san sang. Nhan Ctrl+Space de bat/tat.
                </TextBlock>
                <ToggleSwitch x:Name="LaunchAtStartupToggle" Header="Khoi dong cung Windows" HorizontalAlignment="Center"/>
            </StackPanel>

            <!-- Navigation buttons -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="16">
                <Button x:Name="BackButton" Content="Quay lai" Click="Back_Click" Visibility="Collapsed"/>
                <Button x:Name="NextButton" Content="Tiep tuc" Click="Next_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
