<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <UseWPF>true</UseWPF>
    <UseWindowsForms>true</UseWindowsForms>
    <ApplicationIcon>Resources\Icons\app.ico</ApplicationIcon>
    <RuntimeIdentifier>win-x64</RuntimeIdentifier>
    <PlatformTarget>x64</PlatformTarget>

    <!-- App info -->
    <AssemblyName>GoNhanh</AssemblyName>
    <RootNamespace>GoNhanh</RootNamespace>
    <Title>Gõ Nhanh</Title>
    <Description>Vietnamese Input Method for Windows</Description>
    <Company>Gõ Nhanh Contributors</Company>
    <Product>Gõ Nhanh</Product>
    <Copyright>Copyright © 2024-2025 Gõ Nhanh Contributors</Copyright>
    <Version>1.0.0</Version>

    <!-- Assembly attributes -->
    <GenerateAssemblyInfo>true</GenerateAssemblyInfo>

    <!-- Windows-specific -->
    <ApplicationManifest>app.manifest</ApplicationManifest>
    <StartupObject>GoNhanh.App</StartupObject>
  </PropertyGroup>

  <ItemGroup>
    <!-- Native DLL - copy to output/Native folder -->
    <None Update="Native\gonhanh_core.dll">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      <Link>Native\gonhanh_core.dll</Link>
    </None>
    <Content Include="Native\**" CopyToPublishDirectory="PreserveNewest" />

    <!-- App icon -->
    <Resource Include="Resources\Icons\app.ico" />
  </ItemGroup>

</Project>
