<Window x:Class="GoNhanh.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:GoNhanh.Views"
        Title="Cài đặt - GoNhanh"
        Height="720" Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="{StaticResource BackgroundBrush}">

    <Window.Resources>
        <!-- Toggle Switch Style (Apple style - clean, no shadow) -->
        <Style x:Key="ToggleSwitch" TargetType="CheckBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <Grid>
                            <Border x:Name="Track"
                                    Width="44" Height="24"
                                    CornerRadius="12"
                                    Background="#E5E7EB"
                                    Cursor="Hand"/>
                            <Border x:Name="Thumb"
                                    Width="20" Height="20"
                                    CornerRadius="10"
                                    Background="White"
                                    HorizontalAlignment="Left"
                                    Margin="2,0,0,0"
                                    BorderBrush="#00000010"
                                    BorderThickness="0.5"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Track" Property="Background" Value="{StaticResource PrimaryBrush}"/>
                                <Setter TargetName="Thumb" Property="HorizontalAlignment" Value="Right"/>
                                <Setter TargetName="Thumb" Property="Margin" Value="0,0,2,0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Card Style -->
        <Style x:Key="CardBorder" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
        </Style>

        <!-- Row Style -->
        <Style x:Key="SettingsRow" TargetType="Border">
            <Setter Property="Padding" Value="16,12"/>
        </Style>

        <!-- Separator -->
        <Style x:Key="RowSeparator" TargetType="Border">
            <Setter Property="BorderBrush" Value="#F3F4F6"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="Margin" Value="16,0"/>
        </Style>
    </Window.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="24">
        <StackPanel>
            <!-- Header -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,24">
                <TextBlock Text="GoNhanh"
                           FontSize="28"
                           FontWeight="Bold"
                           Foreground="{StaticResource PrimaryBrush}"/>
                <TextBlock Text=" Cài đặt"
                           FontSize="28"
                           FontWeight="Light"
                           Foreground="{StaticResource TextBrush}"
                           VerticalAlignment="Bottom"/>
            </StackPanel>

            <!-- Input Method Settings -->
            <Border Style="{StaticResource CardBorder}">
                <StackPanel>
                    <!-- Enable/Disable -->
                    <Border Style="{StaticResource SettingsRow}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Bộ gõ tiếng Việt"
                                       FontSize="13"
                                       Foreground="{StaticResource TextBrush}"
                                       VerticalAlignment="Center"/>
                            <CheckBox x:Name="EnabledToggle"
                                      Grid.Column="1"
                                      Style="{StaticResource ToggleSwitch}"
                                      Checked="EnabledToggle_Changed"
                                      Unchecked="EnabledToggle_Changed"/>
                        </Grid>
                    </Border>

                    <Border Style="{StaticResource RowSeparator}"/>

                    <!-- Input Method -->
                    <Border Style="{StaticResource SettingsRow}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Kiểu gõ"
                                       FontSize="13"
                                       Foreground="{StaticResource TextBrush}"
                                       VerticalAlignment="Center"/>
                            <ComboBox x:Name="MethodCombo"
                                      Grid.Column="1"
                                      Width="100"
                                      SelectionChanged="MethodCombo_Changed">
                                <ComboBoxItem Content="Telex" Tag="0"/>
                                <ComboBoxItem Content="VNI" Tag="1"/>
                            </ComboBox>
                        </Grid>
                    </Border>

                    <Border Style="{StaticResource RowSeparator}"/>

                    <!-- W Shortcut (Telex only) -->
                    <Border x:Name="WShortcutRow" Style="{StaticResource SettingsRow}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel>
                                <TextBlock Text="Gõ W thành Ư ở đầu từ"
                                           FontSize="13"
                                           Foreground="{StaticResource TextBrush}"/>
                                <TextBlock Text="Chỉ áp dụng cho Telex"
                                           FontSize="11"
                                           Foreground="{StaticResource SecondaryTextBrush}"
                                           Margin="0,2,0,0"/>
                            </StackPanel>
                            <CheckBox x:Name="WShortcutToggle"
                                      Grid.Column="1"
                                      Style="{StaticResource ToggleSwitch}"
                                      Checked="WShortcutToggle_Changed"
                                      Unchecked="WShortcutToggle_Changed"/>
                        </Grid>
                    </Border>

                    <Border Style="{StaticResource RowSeparator}"/>

                    <!-- Toggle Shortcut -->
                    <Border Style="{StaticResource SettingsRow}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel>
                                <TextBlock Text="Phím tắt bật/tắt"
                                           FontSize="13"
                                           Foreground="{StaticResource TextBrush}"/>
                                <TextBlock Text="Nhấn để thay đổi phím tắt"
                                           FontSize="11"
                                           Foreground="{StaticResource SecondaryTextBrush}"
                                           Margin="0,2,0,0"/>
                            </StackPanel>
                            <local:ShortcutRecorderControl x:Name="ShortcutRecorder"
                                                           Grid.Column="1"
                                                           MinWidth="120"/>
                        </Grid>
                    </Border>

                    <Border Style="{StaticResource RowSeparator}"/>

                    <!-- Bracket Shortcut -->
                    <Border Style="{StaticResource SettingsRow}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel>
                                <TextBlock Text="Gõ ] thành Ư, [ thành Ơ"
                                           FontSize="13"
                                           Foreground="{StaticResource TextBrush}"/>
                                <TextBlock Text="Phím tắt ngoặc vuông"
                                           FontSize="11"
                                           Foreground="{StaticResource SecondaryTextBrush}"
                                           Margin="0,2,0,0"/>
                            </StackPanel>
                            <CheckBox x:Name="BracketShortcutToggle"
                                      Grid.Column="1"
                                      Style="{StaticResource ToggleSwitch}"
                                      Checked="BracketShortcutToggle_Changed"
                                      Unchecked="BracketShortcutToggle_Changed"/>
                        </Grid>
                    </Border>
                </StackPanel>
            </Border>

            <!-- Behavior Settings -->
            <Border Style="{StaticResource CardBorder}">
                <StackPanel>
                    <!-- Auto Start -->
                    <Border Style="{StaticResource SettingsRow}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Khởi động cùng hệ thống"
                                       FontSize="13"
                                       Foreground="{StaticResource TextBrush}"
                                       VerticalAlignment="Center"/>
                            <CheckBox x:Name="AutoStartToggle"
                                      Grid.Column="1"
                                      Style="{StaticResource ToggleSwitch}"
                                      Checked="AutoStartToggle_Changed"
                                      Unchecked="AutoStartToggle_Changed"/>
                        </Grid>
                    </Border>

                    <Border Style="{StaticResource RowSeparator}"/>

                    <!-- Per App Mode -->
                    <Border Style="{StaticResource SettingsRow}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel>
                                <TextBlock Text="Tự chuyển chế độ theo ứng dụng"
                                           FontSize="13"
                                           Foreground="{StaticResource TextBrush}"/>
                                <TextBlock Text="Nhớ trạng thái bật/tắt cho mỗi ứng dụng"
                                           FontSize="11"
                                           Foreground="{StaticResource SecondaryTextBrush}"
                                           Margin="0,2,0,0"/>
                            </StackPanel>
                            <CheckBox x:Name="PerAppModeToggle"
                                      Grid.Column="1"
                                      Style="{StaticResource ToggleSwitch}"
                                      Checked="PerAppModeToggle_Changed"
                                      Unchecked="PerAppModeToggle_Changed"/>
                        </Grid>
                    </Border>

                    <Border Style="{StaticResource RowSeparator}"/>

                    <!-- English Auto Restore -->
                    <Border Style="{StaticResource SettingsRow}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Tự khôi phục từ tiếng Anh"
                                               FontSize="13"
                                               Foreground="{StaticResource TextBrush}"/>
                                    <Border Background="#F97316"
                                            CornerRadius="4"
                                            Padding="4,1"
                                            Margin="8,0,0,0"
                                            VerticalAlignment="Center">
                                        <TextBlock Text="Beta"
                                                   FontSize="9"
                                                   FontWeight="Medium"
                                                   Foreground="White"/>
                                    </Border>
                                </StackPanel>
                            </StackPanel>
                            <CheckBox x:Name="EnglishAutoRestoreToggle"
                                      Grid.Column="1"
                                      Style="{StaticResource ToggleSwitch}"
                                      Checked="EnglishAutoRestoreToggle_Changed"
                                      Unchecked="EnglishAutoRestoreToggle_Changed"/>
                        </Grid>
                    </Border>
                </StackPanel>
            </Border>

            <!-- Additional Settings -->
            <Border Style="{StaticResource CardBorder}">
                <StackPanel>
                    <!-- Sound -->
                    <Border Style="{StaticResource SettingsRow}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Âm thanh chuyển ngôn ngữ"
                                       FontSize="13"
                                       Foreground="{StaticResource TextBrush}"
                                       VerticalAlignment="Center"/>
                            <CheckBox x:Name="SoundToggle"
                                      Grid.Column="1"
                                      Style="{StaticResource ToggleSwitch}"
                                      Checked="SoundToggle_Changed"
                                      Unchecked="SoundToggle_Changed"/>
                        </Grid>
                    </Border>

                    <Border Style="{StaticResource RowSeparator}"/>

                    <!-- Modern Tone -->
                    <Border Style="{StaticResource SettingsRow}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel>
                                <TextBlock Text="Đặt dấu kiểu mới"
                                           FontSize="13"
                                           Foreground="{StaticResource TextBrush}"/>
                                <TextBlock Text="oà, uý thay vì òa, úy"
                                           FontSize="11"
                                           Foreground="{StaticResource SecondaryTextBrush}"
                                           Margin="0,2,0,0"/>
                            </StackPanel>
                            <CheckBox x:Name="ModernToneToggle"
                                      Grid.Column="1"
                                      Style="{StaticResource ToggleSwitch}"
                                      Checked="ModernToneToggle_Changed"
                                      Unchecked="ModernToneToggle_Changed"/>
                        </Grid>
                    </Border>

                    <Border Style="{StaticResource RowSeparator}"/>

                    <!-- Auto Capitalize -->
                    <Border Style="{StaticResource SettingsRow}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Tự viết hoa đầu câu"
                                       FontSize="13"
                                       Foreground="{StaticResource TextBrush}"
                                       VerticalAlignment="Center"/>
                            <CheckBox x:Name="AutoCapitalizeToggle"
                                      Grid.Column="1"
                                      Style="{StaticResource ToggleSwitch}"
                                      Checked="AutoCapitalizeToggle_Changed"
                                      Unchecked="AutoCapitalizeToggle_Changed"/>
                        </Grid>
                    </Border>

                    <Border Style="{StaticResource RowSeparator}"/>

                    <!-- ESC Restore -->
                    <Border Style="{StaticResource SettingsRow}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel>
                                <TextBlock Text="Gõ ESC hoàn tác dấu"
                                           FontSize="13"
                                           Foreground="{StaticResource TextBrush}"/>
                                <TextBlock Text="Nhấn ESC để xóa dấu vừa gõ"
                                           FontSize="11"
                                           Foreground="{StaticResource SecondaryTextBrush}"
                                           Margin="0,2,0,0"/>
                            </StackPanel>
                            <CheckBox x:Name="EscRestoreToggle"
                                      Grid.Column="1"
                                      Style="{StaticResource ToggleSwitch}"
                                      Checked="EscRestoreToggle_Changed"
                                      Unchecked="EscRestoreToggle_Changed"/>
                        </Grid>
                    </Border>
                </StackPanel>
            </Border>

            <!-- Text Abbreviations Card -->
            <Border Style="{StaticResource CardBorder}">
                <Border Style="{StaticResource SettingsRow}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel>
                            <TextBlock Text="Viết tắt"
                                       FontSize="13"
                                       Foreground="{StaticResource TextBrush}"/>
                            <TextBlock x:Name="ShortcutsCountText"
                                       FontSize="11"
                                       Foreground="{StaticResource SecondaryTextBrush}"
                                       Margin="0,2,0,0"/>
                        </StackPanel>
                        <Button Grid.Column="1"
                                Content="Quản lý"
                                Padding="12,6"
                                Cursor="Hand"
                                Click="ShortcutsButton_Click">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="White"
                                            BorderBrush="#E5E7EB"
                                            BorderThickness="1"
                                            CornerRadius="6"
                                            Padding="{TemplateBinding Padding}">
                                        <TextBlock Text="{TemplateBinding Content}"
                                                   FontSize="12"
                                                   Foreground="{StaticResource TextBrush}"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#F9FAFB"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </Grid>
                </Border>
            </Border>

            <!-- Version Info -->
            <StackPanel HorizontalAlignment="Center" Margin="0,8,0,16">
                <TextBlock x:Name="VersionText"
                           HorizontalAlignment="Center"
                           FontSize="11"
                           Foreground="{StaticResource SecondaryTextBrush}"/>
                <Button x:Name="CheckUpdateButton"
                        Content="Kiểm tra cập nhật"
                        HorizontalAlignment="Center"
                        Margin="0,8,0,0"
                        Padding="12,6"
                        Cursor="Hand"
                        Click="CheckUpdate_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="Transparent"
                                    BorderBrush="#D1D5DB"
                                    BorderThickness="1"
                                    CornerRadius="6"
                                    Padding="{TemplateBinding Padding}">
                                <TextBlock Text="{TemplateBinding Content}"
                                           FontSize="11"
                                           Foreground="{StaticResource SecondaryTextBrush}"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#F9FAFB"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Window>
