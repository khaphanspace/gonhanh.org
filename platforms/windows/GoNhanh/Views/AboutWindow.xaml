<Window x:Class="GoNhanh.Views.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Giới thiệu GoNhanh"
        Height="480" Width="380"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="White">

    <Window.Resources>
        <!-- Link Button Style (like macOS) -->
        <Style x:Key="LinkButton" TargetType="Button">
            <Setter Property="Background" Value="#F9FAFB"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="8,10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#F3F4F6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Version Badge Style -->
        <Style x:Key="VersionBadge" TargetType="Border">
            <Setter Property="Background" Value="#F3F4F6"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="10,4"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="32,28,32,0">
            <!-- App Icon Placeholder -->
            <Border Width="80" Height="80"
                    Background="{StaticResource PrimaryBrush}"
                    CornerRadius="16"
                    HorizontalAlignment="Center">
                <TextBlock Text="V"
                           FontSize="40"
                           FontWeight="Bold"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
            </Border>

            <!-- App Name -->
            <TextBlock x:Name="AppNameText"
                       Text="Gõ Nhanh"
                       FontSize="24"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,12,0,0"/>

            <!-- Tagline -->
            <TextBlock Text="Bộ gõ tiếng Việt hiệu suất cao"
                       FontSize="13"
                       Foreground="{StaticResource SecondaryTextBrush}"
                       HorizontalAlignment="Center"
                       Margin="0,4,0,0"/>

            <!-- Version Badges -->
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="0,12,0,0">
                <Border Style="{StaticResource VersionBadge}" Margin="0,0,8,0">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Version "
                                   FontSize="10"
                                   Foreground="#9CA3AF"/>
                        <TextBlock x:Name="VersionText"
                                   Text="1.0.0"
                                   FontSize="11"
                                   FontWeight="Medium"
                                   Foreground="{StaticResource SecondaryTextBrush}"/>
                    </StackPanel>
                </Border>
                <Border Style="{StaticResource VersionBadge}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Build "
                                   FontSize="10"
                                   Foreground="#9CA3AF"/>
                        <TextBlock x:Name="BuildText"
                                   Text="1"
                                   FontSize="11"
                                   FontWeight="Medium"
                                   Foreground="{StaticResource SecondaryTextBrush}"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </StackPanel>

        <!-- Separator -->
        <Border Grid.Row="1" Height="1" Background="#F3F4F6" Margin="0,20,0,0"/>

        <!-- Info Section -->
        <StackPanel Grid.Row="2" Margin="24,16,24,0">
            <!-- Developer -->
            <Grid Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="24"/>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="&#xE77B;" FontFamily="Segoe MDL2 Assets" FontSize="12"
                           Foreground="{StaticResource SecondaryTextBrush}" VerticalAlignment="Center"/>
                <TextBlock Grid.Column="1" Text="Developer"
                           FontSize="12" Foreground="{StaticResource SecondaryTextBrush}" VerticalAlignment="Center"/>
                <TextBlock x:Name="AuthorText" Grid.Column="2"
                           FontSize="12" FontWeight="Medium" VerticalAlignment="Center"/>
            </Grid>

            <!-- Contact -->
            <Grid Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="24"/>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="&#xE715;" FontFamily="Segoe MDL2 Assets" FontSize="12"
                           Foreground="{StaticResource SecondaryTextBrush}" VerticalAlignment="Center"/>
                <TextBlock Grid.Column="1" Text="Contact"
                           FontSize="12" Foreground="{StaticResource SecondaryTextBrush}" VerticalAlignment="Center"/>
                <TextBlock Grid.Column="2" VerticalAlignment="Center">
                    <Hyperlink x:Name="EmailLink" RequestNavigate="Hyperlink_RequestNavigate">
                        <Run x:Name="EmailText" FontSize="12" FontWeight="Medium"/>
                    </Hyperlink>
                </TextBlock>
            </Grid>

            <!-- Built with -->
            <Grid Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="24"/>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="&#xE90F;" FontFamily="Segoe MDL2 Assets" FontSize="12"
                           Foreground="{StaticResource SecondaryTextBrush}" VerticalAlignment="Center"/>
                <TextBlock Grid.Column="1" Text="Built with"
                           FontSize="12" Foreground="{StaticResource SecondaryTextBrush}" VerticalAlignment="Center"/>
                <TextBlock x:Name="TechStackText" Grid.Column="2"
                           FontSize="12" FontWeight="Medium" VerticalAlignment="Center"/>
            </Grid>

            <!-- License -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="24"/>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="&#xE8A1;" FontFamily="Segoe MDL2 Assets" FontSize="12"
                           Foreground="{StaticResource SecondaryTextBrush}" VerticalAlignment="Center"/>
                <TextBlock Grid.Column="1" Text="License"
                           FontSize="12" Foreground="{StaticResource SecondaryTextBrush}" VerticalAlignment="Center"/>
                <TextBlock x:Name="LicenseText" Grid.Column="2"
                           FontSize="12" FontWeight="Medium" VerticalAlignment="Center"/>
            </Grid>
        </StackPanel>

        <!-- Separator -->
        <Border Grid.Row="3" Height="1" Background="#F3F4F6" Margin="0,16,0,0"/>

        <!-- Links Section (like macOS) -->
        <Grid Grid.Row="4" Margin="24,16,24,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="12"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="12"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="12"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="WebsiteButton" Grid.Column="0" Style="{StaticResource LinkButton}" Click="Website_Click">
                <StackPanel>
                    <TextBlock Text="&#xE774;" FontFamily="Segoe MDL2 Assets" FontSize="16"
                               HorizontalAlignment="Center" Foreground="{StaticResource SecondaryTextBrush}"/>
                    <TextBlock Text="Website" FontSize="10" HorizontalAlignment="Center"
                               Margin="0,4,0,0" Foreground="{StaticResource SecondaryTextBrush}"/>
                </StackPanel>
            </Button>

            <Button x:Name="GitHubButton" Grid.Column="2" Style="{StaticResource LinkButton}" Click="GitHub_Click">
                <StackPanel>
                    <TextBlock Text="&#xE943;" FontFamily="Segoe MDL2 Assets" FontSize="16"
                               HorizontalAlignment="Center" Foreground="{StaticResource SecondaryTextBrush}"/>
                    <TextBlock Text="GitHub" FontSize="10" HorizontalAlignment="Center"
                               Margin="0,4,0,0" Foreground="{StaticResource SecondaryTextBrush}"/>
                </StackPanel>
            </Button>

            <Button x:Name="IssuesButton" Grid.Column="4" Style="{StaticResource LinkButton}" Click="Issues_Click">
                <StackPanel>
                    <TextBlock Text="&#xE783;" FontFamily="Segoe MDL2 Assets" FontSize="16"
                               HorizontalAlignment="Center" Foreground="{StaticResource SecondaryTextBrush}"/>
                    <TextBlock Text="Issues" FontSize="10" HorizontalAlignment="Center"
                               Margin="0,4,0,0" Foreground="{StaticResource SecondaryTextBrush}"/>
                </StackPanel>
            </Button>

            <Button x:Name="LinkedInButton" Grid.Column="6" Style="{StaticResource LinkButton}" Click="LinkedIn_Click">
                <StackPanel>
                    <TextBlock Text="&#xE125;" FontFamily="Segoe MDL2 Assets" FontSize="16"
                               HorizontalAlignment="Center" Foreground="{StaticResource SecondaryTextBrush}"/>
                    <TextBlock Text="LinkedIn" FontSize="10" HorizontalAlignment="Center"
                               Margin="0,4,0,0" Foreground="{StaticResource SecondaryTextBrush}"/>
                </StackPanel>
            </Button>
        </Grid>

        <!-- Spacer -->
        <Border Grid.Row="7"/>

        <!-- Footer -->
        <Border Grid.Row="8"
                Background="#FAFAFA"
                BorderBrush="#F3F4F6"
                BorderThickness="0,1,0,0"
                Padding="0,12">
            <TextBlock x:Name="CopyrightText"
                       FontSize="10"
                       Foreground="#9CA3AF"
                       HorizontalAlignment="Center"/>
        </Border>
    </Grid>
</Window>
