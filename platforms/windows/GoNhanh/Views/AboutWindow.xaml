<Window x:Class="GoNhanh.Views.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Về Gõ Nhanh"
        Height="300" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="{StaticResource BackgroundBrush}">
    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" HorizontalAlignment="Center">
            <TextBlock Text="Gõ Nhanh"
                       FontSize="24" FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Foreground="{StaticResource PrimaryBrush}"/>
            <TextBlock x:Name="VersionText"
                       Text="Phiên bản 1.0.0"
                       FontSize="12" Margin="0,5,0,0"
                       HorizontalAlignment="Center"
                       Foreground="{StaticResource SubtleBrush}"/>
        </StackPanel>

        <!-- Content -->
        <StackPanel Grid.Row="1" VerticalAlignment="Center">
            <TextBlock Text="Bộ gõ tiếng Việt nhanh, nhẹ, mã nguồn mở"
                       TextAlignment="Center"
                       Foreground="{StaticResource TextBrush}"/>
            <TextBlock Text="© 2024-2025 Gõ Nhanh Contributors"
                       TextAlignment="Center" Margin="0,10,0,0"
                       Foreground="{StaticResource SubtleBrush}"/>
        </StackPanel>

        <!-- Footer -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="GitHub" Click="GitHubButton_Click"
                    Width="80" Height="30" Margin="0,0,10,0"/>
            <Button Content="Đóng" Click="CloseButton_Click"
                    Width="80" Height="30"/>
        </StackPanel>
    </Grid>
</Window>
