<UserControl x:Class="GoNhanh.Views.ShortcutRecorderControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="32">

    <Border x:Name="RecorderBorder"
            Background="White"
            BorderBrush="#D1D5DB"
            BorderThickness="1"
            CornerRadius="6"
            Padding="12,0"
            Cursor="Hand"
            MouseDown="Border_MouseDown">
        <Grid>
            <TextBlock x:Name="ShortcutText"
                       VerticalAlignment="Center"
                       FontSize="12"
                       Foreground="#374151"/>
            <TextBlock x:Name="RecordingText"
                       Text="Nhấn tổ hợp phím..."
                       VerticalAlignment="Center"
                       FontSize="12"
                       Foreground="#9CA3AF"
                       Visibility="Collapsed"/>
        </Grid>
    </Border>
</UserControl>
