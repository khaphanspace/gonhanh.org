<Application x:Class="GoNhanh.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             ShutdownMode="OnExplicitShutdown">
    <Application.Resources>
        <!-- Theme colors -->
        <SolidColorBrush x:Key="PrimaryBrush" Color="#0066CC"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#00AA44"/>
        <SolidColorBrush x:Key="TextBrush" Color="#1A1A1A"/>
        <SolidColorBrush x:Key="SubtleBrush" Color="#666666"/>
        <SolidColorBrush x:Key="BackgroundBrush" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="SurfaceBrush" Color="#F5F5F5"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#E0E0E0"/>
    </Application.Resources>
</Application>
